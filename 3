public  class  FinalmentePegadinha {

	public  static  void  main ( String [] args ) {

		int [] numeros = { 4 , 8 , 16 , 32 , 64 , 128 };
		demônio int [] = { 2 , 0 , 4 , 8 , 0 };

		para ( int i = 0 ; i < numeros . comprimento; i ++ ) {
			tente {
				Sistema . para fora . println (numeros [i] +  " / "  + demônio [i] +  " = "  + (numeros [i] / demônio [i]));
			}
			catch ( ArithmeticException e) {
				Sistema . para fora . println ( " Erro ao dividir por zero " );
				Sistema . saída ( 0 );
			}
			catch ( ArrayIndexOutOfBoundsException e) {
				Sistema . para fora . println ( " Posição do array inválida " );
				Sistema . saída ( 0 );
			}
			finalmente {
				Sistema . para fora . println ( " Essa linha é impressa sempre após o try ou catch " );
				Sistema . para fora . println ();
			}
		}

	}
}
